# Texas Hill Country Website - Environment Variables Template
# Create a copy of this file named .env and fill in your actual values

# Database connection (required)
# Replace with your SiteGround PostgreSQL database details
DATABASE_URL=postgres://username:password@hostname:5432/database_name
PGHOST=hostname
PGUSER=username
PGPASSWORD=password
PGDATABASE=database_name
PGPORT=5432

# API Keys (required)
# Your Google Calendar API key for event integration
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key

# Your OpenAI API key for the travel assistant
OPENAI_API_KEY=your_openai_api_key

# Your Weather API key for the weather widget
WEATHER_API_KEY=your_weather_api_key

# Server configuration
NODE_ENV=production
PORT=8080  # This will be overridden by SiteGround's Node.js setup

# Session secret for admin login security
SESSION_SECRET=create_a_secure_random_string_here

